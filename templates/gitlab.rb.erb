# https://gitlab.com/gitlab-org/omnibus-gitlab/blob/master/files/gitlab-config-template/gitlab.rb.template
<%- def decorate(v)
  if v =~ /\AYAML/
    return v
  elsif v.is_a?(String)
    return "'#{v}'"
  elsif v.is_a?(Array)
    vedit = v.map { |s| "\"#{s}\"" }
    return "[#{vedit.join(',')}]"
  else
    return v
  end
end -%>

